<header>
  <h1 id="app_title"></h1>
</header>
<main id="container"></main>

<template id="chosen_car_template">
  <section id="car_info">
    <dl>
      <dt>Marca:</dt>
      <dd id="car_brand"></dd>

      <dt>Nome:</dt>
      <dd id="car_name"></dd>

      <dt>Combustível:</dt>
      <dd id="car_fuel"></dd>

      <dt>Ano:</dt>
      <dd id="car_year"></dd>
    </dl>

    <div id="car_price"></div>
    <time id="car_reference"></time>

    <footer>
      <p>
        Agora você já pode vender seu carro!<br/>
        <a href="https://www.volanty.com/vender.html">Clique aqui</a> e venda seu carro sem se preocupar.<br/>
        <small>na Volanty seu carro vale mais.</small>
      </p>
    </footer>
  </section>
</template>

<template id="brand_template">
  <form action="" id="brand_form">
    <fieldset>
      <legend>Selecione a marca do seu carro</legend>
      <input list="brand_selector" id="brand_selector_search" placeholder="Marca" autocomplete="off">
      <datalist id="brand_selector"></datalist>
    </fieldset>
    <button type="submit">ok</button>
  </form>
</template>

<template id="model_template">
  <form action="" id="model_form">
    <fieldset>
      <legend>Selecione o modelo do seu carro</legend>
      <input list="model_selector" id="model_selector_search" placeholder="Modelo do carro" autocomplete="off">
      <datalist id="model_selector"></datalist>
    </fieldset>
    <button type="submit">ok</button>
  </form>
</template>

<template id="year_template">
  <form action="" id="year_form">
    <fieldset>
      <legend>Selecione o ano e o combustível do seu carro</legend>
      <select id="year_selector"></select>
    </fieldset>
    <button type="submit">ok</button>
  </form>
</template>